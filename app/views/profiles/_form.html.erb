<%= form_for @profile, :html => { :class => 'form-horizontal' } do |f| %>
 
  <% if current_user%>
      <%= hidden_field_tag "profile[email]", current_user.email %>
  <% end %>
  <div class="control-group">
    <%= f.label :start_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :start_date, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :end_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :end_date, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :comment, :class => 'control-label' %>
    <div class="controls">
      <%= text_area_tag("profile[comment]", :comment , :rows => "3") %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :time, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :time, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :leave_type, :class => 'control-label' %>
    <div class="controls">
      <%= select_tag "profile[leave_type]", options_for_select(["annual","personal","sick"],"annual") %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                profiles_path, :class => 'btn' %>
  </div>
<% end %>
