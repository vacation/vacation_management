<%= form_for @profile do |f| %>
  <% if @profile.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @profile.errors.full_messages%>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!--<p>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </p>-->
  <%= hidden_field_tag "profile[email]", current_user.email %>
  <p>
    <%= f.label :type %><br/>
    <%= select_tag "profile[leave_type]", options_for_select(["annual","personal","sick"],"annual") %>
  </p>
  <p>
    <%= f.label :time %><br/>
    from
    <%= f.datetime_select :start_date %>
    to
    <%= f.datetime_select :end_date %>
  </p>
  <p>
    <%= f.label :time %>
    <%= f.text_field :time %>H
  </p>
  <p>
    <%= f.label :comment %><br/>
    <%= text_area_tag("profile[comment]", :comment ) %>
  </p>
  <p class="button"><%= f.submit  "create"%></p>
<% end %>